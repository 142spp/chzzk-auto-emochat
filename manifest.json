{
  "manifest_version": 3,
  "name": "치지직 랜덤 이모티콘 도우미",
  "version": "1.1", 
  "description": "단축키를 눌러 치지직 채팅창에 설정된 랜덤 이모티콘을 반복 입력하고 전송합니다. 자동 입력 토글 기능 포함.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "*://*.chzzk.naver.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chzzk.naver.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "trigger-emoticon": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "랜덤 이모티콘 반복 입력 및 전송"
    },
    "toggle-auto-send": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "자동 이모티콘 입력 시작/중지"
    }
  }
}